<UserControl
    x:Class="TagsTreeWinUI3.Views.Controls.TagSearchBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTreeWinUI3.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:viewModels="using:TagsTreeWinUI3.ViewModels"
    x:Name="TagSearch"
    mc:Ignorable="d">
    <AutoSuggestBox
        x:Name="AutoSuggestBox"
        DataContext="{Binding ElementName=TagSearch}"
        PlaceholderText="标签（空格隔开标签，不包含/:*?&quot;&lt;&gt;|,和空白字符，留空显示全部）"
        QueryIcon="Find"
        QuerySubmitted="QuerySubmitted"
        SuggestionChosen="SuggestionChosen"
        TextChanged="TextChanged"
        UpdateTextOnSelect="False">
        <AutoSuggestBox.ItemTemplate>
            <DataTemplate x:DataType="viewModels:FileViewModel">
                <TextBlock Text="{x:Bind FullName, Mode=OneTime}" />
            </DataTemplate>
        </AutoSuggestBox.ItemTemplate>
    </AutoSuggestBox>
</UserControl>
