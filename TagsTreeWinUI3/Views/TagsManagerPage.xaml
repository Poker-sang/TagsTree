<Page
    x:Class="TagsTree.Views.TagsManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TagsTree.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:viewModels="using:TagsTree.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <uiControls:DockPanel>
        <controls:InputName x:Name="InputName" />
        <uiControls:DockPanel uiControls:DockPanel.Dock="Top">
            <CommandBar
                uiControls:DockPanel.Dock="Right"
                Background="Transparent"
                DefaultLabelPosition="Right"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton
                    Click="NewBClick"
                    Icon="{ui:FontIcon Glyph=&#xE8B5;}"
                    Label="添加" />
                <AppBarButton
                    Click="MoveBClick"
                    Icon="{ui:FontIcon Glyph=&#xE8DE;}"
                    Label="移动" />
                <AppBarButton
                    Click="RenameBClick"
                    Icon="{ui:FontIcon Glyph=&#xE8AC;}"
                    Label="重命名" />
                <AppBarButton
                    Click="DeleteBClick"
                    Icon="{ui:FontIcon Glyph=&#xE74D;}"
                    Label="删除" />
                <AppBarSeparator />
                <AppBarButton
                    x:Name="BSave"
                    Click="SaveBClick"
                    Icon="{ui:FontIcon Glyph=&#xE74E;}"
                    IsEnabled="False"
                    Label="保存" />
            </CommandBar>
            <AutoSuggestBox
                x:Name="TbName"
                VerticalAlignment="Center"
                uiControls:DockPanel.Dock="Left"
                PlaceholderText="标签名称（不包含\/:*?&quot;&lt;&gt;|,和空白字符且不为空）"
                Text="{x:Bind _vm.Name, Mode=TwoWay}"
                TextChanged="NameChanged" />
        </uiControls:DockPanel>
        <controls:TagCompleteBox
            x:Name="TbPath"
            VerticalAlignment="Center"
            uiControls:DockPanel.Dock="Top" />
        <TreeView
            MinHeight="400"
            AllowDrop="True"
            CanDragItems="True"
            DragItemsCompleted="TvTags_OnDragItemsCompleted"
            ItemInvoked="Tags_OnItemInvoked"
            ItemsSource="{x:Bind _vm.TagsSource, Mode=TwoWay}">
            <TreeView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:TagViewModel">
                    <TreeViewItem ItemsSource="{x:Bind SubTags, Mode=OneWay}" ToolTipService.ToolTip="{x:Bind FullName}">
                        <TextBlock Text="{x:Bind Name, Mode=OneWay}" />
                        <TreeViewItem.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="NewCmClick"
                                    Tag="{x:Bind}"
                                    Text="新建" />
                                <MenuFlyoutItem
                                    Click="CutCmClick"
                                    Tag="{x:Bind}"
                                    Text="剪切" />
                                <MenuFlyoutItem
                                    Command="{x:Bind local:TagsManagerPage.Current.RPasteCmClick}"
                                    CommandParameter="{x:Bind}"
                                    Text="粘贴" />
                                <MenuFlyoutItem
                                    Click="RenameCmClick"
                                    Tag="{x:Bind}"
                                    Text="重命名" />
                                <MenuFlyoutItem
                                    Click="DeleteCmClick"
                                    Tag="{x:Bind}"
                                    Text="删除" />
                            </MenuFlyout>
                        </TreeViewItem.ContextFlyout>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
            <TreeView.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem Click="NewXCmClick" Text="新建" />
                    <MenuFlyoutItem
                        x:Name="CmPPasteX"
                        Click="PasteXCmClick"
                        IsEnabled="False"
                        Text="粘贴" />
                </MenuFlyout>
            </TreeView.ContextFlyout>
        </TreeView>
    </uiControls:DockPanel>
</Page>
