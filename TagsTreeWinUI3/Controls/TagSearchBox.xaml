<UserControl
    x:Class="TagsTree.Controls.TagSearchBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTree.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:viewModels="using:TagsTree.ViewModels"
    mc:Ignorable="d">
    <uiControls:TokenizingTextBox
        x:Name="TokenizingTextBox"
        PlaceholderText="搜索标签（不包含/:*?&quot;&lt;&gt;|,和空白字符，留空显示全部）"
        QueryIcon="{ui:SymbolIconSource Symbol=Find}"
        QuerySubmitted="QuerySubmitted"
        SuggestionChosen="SuggestionChosen"
        TextChanged="TextChanged">
        <uiControls:TokenizingTextBox.ItemTemplate>
            <DataTemplate x:DataType="viewModels:TagViewModel">
                <TextBlock Text="{x:Bind FullName}" />
            </DataTemplate>
        </uiControls:TokenizingTextBox.ItemTemplate>
    </uiControls:TokenizingTextBox>
</UserControl>
