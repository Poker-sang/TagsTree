<Window
    x:Class="TagsTree.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border
            x:Name="AppTitleBar"
            Height="{x:Bind NavigationView.CompactPaneLength}"
            VerticalAlignment="Top"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <TextBlock
                x:Name="AppTitle"
                Margin="0,15,0,0"
                VerticalAlignment="Top"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="TagsTree" />
        </Border>
        <NavigationView
            x:Name="NavigationView"
            AlwaysShowHeader="True"
            BackRequested="BackRequested"
            Canvas.ZIndex="0"
            DisplayModeChanged="DisplayModeChanged"
            IsBackButtonVisible="Visible"
            IsTabStop="False"
            IsTitleBarAutoPaddingEnabled="False"
            ItemInvoked="ItemInvoked"
            Loaded="Loaded"
            PaneClosing="PaneClosing"
            PaneOpening="PaneOpening">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="主页"
                    Icon="Home"
                    IsEnabled="False"
                    Tag="{x:Bind local:IndexPage.TypeGetter}" />
                <NavigationViewItem
                    Content="标签管理"
                    Icon="Tag"
                    IsEnabled="False"
                    Tag="{x:Bind local:TagsManagerPage.TypeGetter}" />
                <NavigationViewItem
                    Content="文件引入"
                    Icon="{ui:FontIcon Glyph=&#xEC50;}"
                    IsEnabled="False"
                    Tag="{x:Bind local:FileImporterPage.TypeGetter}" />
                <NavigationViewItem
                    Content="为标签添加文件"
                    Icon="Add"
                    IsEnabled="False"
                    Tag="{x:Bind local:SelectTagToEditPage.TypeGetter}" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    Content="监控文件"
                    Icon="{ui:FontIcon Glyph=&#xE7B3;}"
                    IsEnabled="False"
                    Tag="{x:Bind local:FilesObserverPage.TypeGetter}" />
            </NavigationView.FooterMenuItems>
            <Frame x:Name="NavigateFrame" />
        </NavigationView>
    </Grid>
</Window>