<UserControl
    x:Class="TagsTree.Views.Controls.TagCompleteBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TagsTree.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:TagsTree.Models"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewModelControls="clr-namespace:TagsTree.ViewModels.Controls"
    mc:Ignorable="d">
    <ui:AutoSuggestBox
        x:Name="AutoSuggestBox"
        VerticalAlignment="Center"
        DockPanel.Dock="Top"
        PlaceholderText="标签路径（不包含/:*?&quot;&lt;&gt;|,和空白字符且不为空）"
        Text="{Binding Path, Mode=TwoWay}"
        UpdateTextOnSelect="False">
        <ui:AutoSuggestBox.DataContext>
            <viewModelControls:TagCompleteBoxViewModel />
        </ui:AutoSuggestBox.DataContext>
        <ui:AutoSuggestBox.ItemTemplate>
            <DataTemplate>
                <TextBlock d:DataContext="{d:DesignInstance models:TagModel}" Text="{Binding FullName, Mode=OneTime}" />
            </DataTemplate>
        </ui:AutoSuggestBox.ItemTemplate>
    </ui:AutoSuggestBox>
</UserControl>
