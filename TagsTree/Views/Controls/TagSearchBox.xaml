<UserControl
    x:Class="TagsTree.Views.Controls.TagSearchBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TagsTree.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewModels="clr-namespace:TagsTree.ViewModels"
    mc:Ignorable="d">
    <ui:AutoSuggestBox
        x:Name="AutoSuggestBox"
        x:FieldModifier="private"
        DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TagSearchBox, AncestorLevel=1}}"
        PlaceholderText="标签（空格隔开标签，不包含/:*?&quot;&lt;&gt;|,和空白字符，留空显示全部）"
        QueryIcon="Find"
        QuerySubmitted="QuerySubmitted"
        SuggestionChosen="SuggestionChosen"
        TextChanged="TextChanged"
        UpdateTextOnSelect="False">
        <ui:AutoSuggestBox.ItemTemplate>
            <DataTemplate>
                <TextBlock d:DataContext="{d:DesignInstance viewModels:FileViewModel}" Text="{Binding FullName, Mode=OneTime}" />
            </DataTemplate>
        </ui:AutoSuggestBox.ItemTemplate>
    </ui:AutoSuggestBox>
</UserControl>
