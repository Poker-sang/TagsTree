<Page
    x:Class="TagsTree.Views.FilePropertiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TagsTree.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    Background="Transparent"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <uiControls:DockPanel>
        <controls:InputContentDialog x:Name="InputName" />
        <uiControls:DockPanel uiControls:DockPanel.Dock="Top">
            <CommandBar
                uiControls:DockPanel.Dock="Left"
                DefaultLabelPosition="Collapsed"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton Icon="Back" Tapped="{x:Bind local:Utility.BackBClick}" />
            </CommandBar>
            <CommandBar DefaultLabelPosition="Collapsed" OverflowButtonVisibility="Collapsed">
                <AppBarButton
                    x:Name="BOpen"
                    Icon="{ui:FontIcon Glyph=&#xE8E5;}"
                    Tapped="OpenBClick"
                    ToolTipService.ToolTip="打开" />
                <AppBarButton
                    Icon="{ui:FontIcon Glyph=&#xE8DA;}"
                    Tapped="OpenExplorerBClick"
                    ToolTipService.ToolTip="打开文件夹" />
                <AppBarButton
                    Icon="Remove"
                    Tapped="RemoveBClick"
                    ToolTipService.ToolTip="移除" />
                <AppBarButton
                    Icon="Tag"
                    Tapped="EditTagsBClick"
                    ToolTipService.ToolTip="更改标签" />
                <AppBarSeparator />
                <AppBarButton
                    x:Name="BRename"
                    Icon="Rename"
                    Tapped="RenameBClick"
                    ToolTipService.ToolTip="重命名" />
                <AppBarButton
                    x:Name="BMove"
                    Icon="{ui:FontIcon Glyph=&#xE8DE;}"
                    Tapped="MoveBClick"
                    ToolTipService.ToolTip="移动" />
                <AppBarButton
                    x:Name="BDelete"
                    Icon="Delete"
                    Tapped="DeleteBClick"
                    ToolTipService.ToolTip="删除" />
            </CommandBar>
        </uiControls:DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Source="{x:Bind FileViewModel.Icon, Mode=OneWay}" />
            <StackPanel
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="名称：" />
                    <TextBlock FontSize="20" Text="{x:Bind FileViewModel.Name, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="路径：" />
                    <TextBlock FontSize="20" Text="{x:Bind FileViewModel.PartialPath, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="类型：" />
                    <TextBlock FontSize="20" Text="{x:Bind FileViewModel.Extension, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="标签：" />
                    <TextBlock FontSize="20" Text="{x:Bind FileViewModel.Tags, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="修改日期：" />
                    <TextBlock FontSize="20" Text="{x:Bind FileViewModel.DateOfModification, Mode=OneWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="20" Text="大小：" />
                    <TextBlock FontSize="20" Text="{x:Bind FileViewModel.Size, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </uiControls:DockPanel>
</Page>
