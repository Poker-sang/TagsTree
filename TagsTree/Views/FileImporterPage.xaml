<Page
    x:Class="TagsTree.Views.FileImporterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:TagsTree.Controls.Items"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Grid x:Name="FileImporterGrid">
        <uiControls:DockPanel>
            <CommandBar
                uiControls:DockPanel.Dock="Top"
                Background="Transparent"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton Icon="{ui:FontIcon Glyph=&#xE7C3;}" ToolTipService.ToolTip="选择">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                Command="{x:Bind _vm.Import}"
                                CommandParameter="Select_Files"
                                Text="文件" />
                            <MenuFlyoutItem
                                Command="{x:Bind _vm.Import}"
                                CommandParameter="Select_Folders"
                                Text="文件夹" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="{ui:FontIcon Glyph=&#xE8F4;}" ToolTipService.ToolTip="目录">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                Command="{x:Bind _vm.Import}"
                                CommandParameter="Path_Files"
                                Text="文件" />
                            <MenuFlyoutItem
                                Command="{x:Bind _vm.Import}"
                                CommandParameter="Path_Folders"
                                Text="文件夹" />
                            <MenuFlyoutItem
                                Command="{x:Bind _vm.Import}"
                                CommandParameter="Path_Both"
                                Text="全部" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    Command="{x:Bind _vm.Import}"
                    CommandParameter="All"
                    Icon="{ui:FontIcon Glyph=&#xE82E;}"
                    ToolTipService.ToolTip="全部" />
                <AppBarSeparator />
                <AppBarButton
                    Command="{x:Bind _vm.DeleteBClick}"
                    Icon="{ui:FontIcon Glyph=&#xE74D;}"
                    ToolTipService.ToolTip="清空" />
                <AppBarButton
                    Command="{x:Bind _vm.SaveBClick}"
                    CommandParameter="{x:Bind FileImporterGrid}"
                    Icon="{ui:FontIcon Glyph=&#xE74E;}"
                    ToolTipService.ToolTip="保存" />
            </CommandBar>
            <uiControls:DataGrid
                x:Name="FileImporterDataGird"
                AlternatingRowBackground="LightGray"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                ItemsSource="{x:Bind _vm.FileViewModels, Mode=OneWay}">
                <uiControls:DataGrid.RowStyle>
                    <Style TargetType="uiControls:DataGridRow">
                        <Setter Property="ContextFlyout">
                            <Setter.Value>
                                <MenuFlyout>
                                    <MenuFlyoutItem Click="DeleteCmClick" Text="删除" />
                                </MenuFlyout>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </uiControls:DataGrid.RowStyle>
                <uiControls:DataGrid.Columns>
                    <items:DataGridIconColumn />
                    <items:DataGridNameColumn />
                    <items:DataGridPartialPathColumn />
                </uiControls:DataGrid.Columns>
            </uiControls:DataGrid>
        </uiControls:DockPanel>
    </Grid>
</Page>
