<Page
    x:Class="TagsTree.Views.FileImporterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:TagsTree.Services.Converters"
    xmlns:ctkConverters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:TagsTree.Controls.Items"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    Background="Transparent"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">
    <Page.Resources>
        <ctkConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    </Page.Resources>
    <uiControls:DockPanel>
        <uiControls:DockPanel uiControls:DockPanel.Dock="Top">
            <CommandBar
                uiControls:DockPanel.Dock="Right"
                DefaultLabelPosition="Collapsed"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}" ToolTipService.ToolTip="选择引入：引入选择的文件或文件夹">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE762;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                x:Name="SelectFiles"
                                IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}"
                                Tapped="ImportTapped"
                                Text="文件">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE7C3;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="SelectFolders"
                                IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}"
                                Tapped="ImportTapped"
                                Text="文件夹">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8B7;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}" ToolTipService.ToolTip="目录引入：引入选择的目录下一级所有文件或文件夹或全部">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xF89A;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                x:Name="PathFiles"
                                IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}"
                                Tapped="ImportTapped"
                                Text="文件">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE7C3;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="PathFolders"
                                IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}"
                                Tapped="ImportTapped"
                                Text="文件夹">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8B7;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                x:Name="PathBoth"
                                IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}"
                                Tapped="ImportTapped"
                                Text="全部">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8A9;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="All"
                    Icon="SelectAll"
                    IsEnabled="{x:Bind _vm.Imported, Mode=OneWay}"
                    Tapped="ImportTapped"
                    ToolTipService.ToolTip="全部引入：引入选择的目录下所有深度所有文件" />
                <AppBarSeparator />
                <AppBarButton
                    Icon="Delete"
                    IsEnabled="{x:Bind _vm.DeleteSaveEnabled, Mode=OneWay}"
                    Tapped="DeleteTapped"
                    ToolTipService.ToolTip="清空" />
                <AppBarButton
                    Icon="Save"
                    IsEnabled="{x:Bind _vm.DeleteSaveEnabled, Mode=OneWay}"
                    Tapped="SaveTapped"
                    ToolTipService.ToolTip="保存" />
            </CommandBar>
            <Grid>
                <InfoBar
                    Title="成功"
                    IsOpen="{x:Bind _vm.SavedMessage, Converter={StaticResource StringToBoolConverter}, Mode=OneWay}"
                    Message="{x:Bind _vm.SavedMessage, Mode=OneWay}"
                    Severity="Success" />
                <ProgressBar
                    Width="200"
                    IsIndeterminate="True"
                    Visibility="{x:Bind _vm.ShowProgressBar, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
            </Grid>
        </uiControls:DockPanel>
        <uiControls:DataGrid
            x:Name="FileImporterDataGird"
            AutoGenerateColumns="False"
            CanUserReorderColumns="False"
            ItemsSource="{x:Bind _vm.FileViewModels, Mode=OneWay}"
            SelectionMode="Extended">
            <uiControls:DataGrid.RowStyle>
                <Style TargetType="uiControls:DataGridRow">
                    <Setter Property="ContextFlyout">
                        <Setter.Value>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Icon="Remove"
                                    Tapped="ContextDeleteTapped"
                                    Text="移除" />
                            </MenuFlyout>
                        </Setter.Value>
                    </Setter>
                </Style>
            </uiControls:DataGrid.RowStyle>
            <uiControls:DataGrid.Columns>
                <items:DataGridIconColumn />
                <items:DataGridNameColumn />
                <items:DataGridPartialPathColumn />
            </uiControls:DataGrid.Columns>
        </uiControls:DataGrid>
    </uiControls:DockPanel>
</Page>
