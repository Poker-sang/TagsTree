<Page
    x:Class="TagsTree.Views.FileImporterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:TagsTree.Controls.Items"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    Background="Transparent"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <uiControls:DockPanel>
        <uiControls:DockPanel uiControls:DockPanel.Dock="Top">
            <CommandBar
                uiControls:DockPanel.Dock="Right"
                DefaultLabelPosition="Collapsed"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton
                    x:Name="BSelect"
                    Icon="{ui:FontIcon Glyph=&#xE762;}"
                    ToolTipService.ToolTip="选择引入：引入选择的文件或文件夹">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                x:Name="SelectFiles"
                                Icon="{ui:FontIcon Glyph=&#xE7C3;}"
                                Tapped="Import"
                                Text="文件" />
                            <MenuFlyoutItem
                                x:Name="SelectFolders"
                                Icon="{ui:FontIcon Glyph=&#xF12B;}"
                                Tapped="Import"
                                Text="文件夹" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="BPath"
                    Icon="{ui:FontIcon Glyph=&#xF89A;}"
                    ToolTipService.ToolTip="目录引入：引入选择的目录下一级所有文件或文件夹或全部">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                x:Name="PathFiles"
                                Icon="{ui:FontIcon Glyph=&#xE7C3;}"
                                Tapped="Import"
                                Text="文件" />
                            <MenuFlyoutItem
                                x:Name="PathFolders"
                                Icon="{ui:FontIcon Glyph=&#xF12B;}"
                                Tapped="Import"
                                Text="文件夹" />
                            <MenuFlyoutItem
                                x:Name="PathBoth"
                                Icon="{ui:FontIcon Glyph=&#xED25;}"
                                Tapped="Import"
                                Text="全部" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="All"
                    Icon="{ui:FontIcon Glyph=&#xE8B3;}"
                    Tapped="Import"
                    ToolTipService.ToolTip="全部引入：引入选择的目录下所有深度所有文件" />
                <AppBarSeparator />
                <AppBarButton
                    x:Name="BDelete"
                    Icon="Delete"
                    IsEnabled="False"
                    Tapped="{x:Bind DeleteBClick}"
                    ToolTipService.ToolTip="清空" />
                <AppBarButton
                    x:Name="BSave"
                    Icon="Save"
                    IsEnabled="False"
                    Tapped="{x:Bind SaveBClick}"
                    ToolTipService.ToolTip="保存" />
            </CommandBar>
            <Grid>
                <InfoBar
                    x:Name="IbSave"
                    Title="成功"
                    Severity="Success" />
                <ProgressBar
                    x:Name="PbSave"
                    Width="200"
                    IsIndeterminate="True"
                    Opacity="0" />
            </Grid>
        </uiControls:DockPanel>
        <uiControls:DataGrid
            x:Name="FileImporterDataGird"
            AlternatingRowBackground="LightGray"
            AutoGenerateColumns="False"
            CanUserReorderColumns="False"
            ItemsSource="{x:Bind _vm.FileViewModels, Mode=OneWay}">
            <uiControls:DataGrid.RowStyle>
                <Style TargetType="uiControls:DataGridRow">
                    <Setter Property="ContextFlyout">
                        <Setter.Value>
                            <MenuFlyout>
                                <MenuFlyoutItem Tapped="DeleteCmClick" Text="删除" />
                            </MenuFlyout>
                        </Setter.Value>
                    </Setter>
                </Style>
            </uiControls:DataGrid.RowStyle>
            <uiControls:DataGrid.Columns>
                <items:DataGridIconColumn />
                <items:DataGridNameColumn />
                <items:DataGridPartialPathColumn />
            </uiControls:DataGrid.Columns>
        </uiControls:DataGrid>
    </uiControls:DockPanel>
</Page>
