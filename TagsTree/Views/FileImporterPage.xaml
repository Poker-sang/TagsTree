<Page
    x:Class="TagsTree.Views.FileImporterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:items="using:TagsTree.Controls.Items"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    xmlns:uiControls="using:CommunityToolkit.WinUI.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Grid x:Name="FileImporterGrid">
        <uiControls:DockPanel>
            <CommandBar
                uiControls:DockPanel.Dock="Top"
                Background="Transparent"
                OverflowButtonVisibility="Collapsed">
                <AppBarButton
                    x:Name="BSelect"
                    Icon="{ui:FontIcon Glyph=&#xE7C3;}"
                    ToolTipService.ToolTip="选择引入：引入选择的文件或文件夹">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                x:Name="SelectFiles"
                                Click="Import"
                                Text="文件" />
                            <MenuFlyoutItem
                                x:Name="SelectFolders"
                                Click="Import"
                                Text="文件夹" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="BPath"
                    Icon="{ui:FontIcon Glyph=&#xE8F4;}"
                    ToolTipService.ToolTip="目录引入：引入选择的目录下一级所有文件或文件夹或全部">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <MenuFlyoutItem
                                x:Name="PathFiles"
                                Click="Import"
                                Text="文件" />
                            <MenuFlyoutItem
                                x:Name="PathFolders"
                                Click="Import"
                                Text="文件夹" />
                            <MenuFlyoutItem
                                x:Name="PathBoth"
                                Click="Import"
                                Text="全部" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    x:Name="All"
                    Click="Import"
                    Icon="{ui:FontIcon Glyph=&#xE82E;}"
                    ToolTipService.ToolTip="全部引入：引入选择的目录下所有深度所有文件" />
                <AppBarSeparator />
                <AppBarButton
                    x:Name="BDelete"
                    Click="{x:Bind DeleteBClick}"
                    Icon="{ui:FontIcon Glyph=&#xE74D;}"
                    IsEnabled="False"
                    ToolTipService.ToolTip="清空" />
                <AppBarButton
                    x:Name="BSave"
                    Click="{x:Bind SaveBClick}"
                    Icon="{ui:FontIcon Glyph=&#xE74E;}"
                    IsEnabled="False"
                    Tag="{x:Bind FileImporterGrid}"
                    ToolTipService.ToolTip="保存" />
            </CommandBar>
            <uiControls:DataGrid
                x:Name="FileImporterDataGird"
                AlternatingRowBackground="LightGray"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                ItemsSource="{x:Bind _vm.FileViewModels, Mode=OneWay}">
                <uiControls:DataGrid.RowStyle>
                    <Style TargetType="uiControls:DataGridRow">
                        <Setter Property="ContextFlyout">
                            <Setter.Value>
                                <MenuFlyout>
                                    <MenuFlyoutItem Click="DeleteCmClick" Text="删除" />
                                </MenuFlyout>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </uiControls:DataGrid.RowStyle>
                <uiControls:DataGrid.Columns>
                    <items:DataGridIconColumn />
                    <items:DataGridNameColumn />
                    <items:DataGridPartialPathColumn />
                </uiControls:DataGrid.Columns>
            </uiControls:DataGrid>
        </uiControls:DockPanel>
    </Grid>
</Page>
