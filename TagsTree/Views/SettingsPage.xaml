<Page
    x:Class="TagsTree.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="40,30" Spacing="50">
            <StackPanel Spacing="10">
                <TextBlock
                    ui:DockPanel.Dock="Top"
                    FontSize="20"
                    Text="主题色（保存后重启才能完全生效）" />
                <ComboBox x:Name="CbTheme">
                    <ComboBoxItem Content="跟随系统" />
                    <ComboBoxItem Content="浅色" />
                    <ComboBoxItem Content="深色" />
                </ComboBox>
            </StackPanel>
            <StackPanel Spacing="10">
                <TextBlock
                    ui:DockPanel.Dock="Top"
                    FontSize="20"
                    Text="文件路径" />
                <ui:DockPanel>
                    <Button
                        Margin="20,0,0,0"
                        ui:DockPanel.Dock="Right"
                        Click="BLibraryPath_Click"
                        Content="设置文件夹" />
                    <AutoSuggestBox
                        x:Name="TbLibraryPath"
                        VerticalAlignment="Center"
                        PlaceholderText="被归类文件的根目录文件夹" />
                </ui:DockPanel>
            </StackPanel>
            <ToggleSwitch
                x:Name="CbRootFoldersExist"
                VerticalAlignment="Center"
                Header="将所在路径文件夹名作为标签使用" />
            <ToggleSwitch x:Name="TsFilesObserver" Header="监控文件" />
            <DropDownButton Content="文件和标签记录">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                        <MenuFlyoutItem Click="BImport_Click" Text="导入" />
                        <MenuFlyoutItem Click="BExport_Click" Text="导出" />
                        <MenuFlyoutItem Click="BOpenDirectory_Click" Text="打开目录" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <ui:DockPanel>
                <Button
                    ui:DockPanel.Dock="Left"
                    Click="BSave_Click"
                    Content="保存" />
                <InfoBar x:Name="InfoBar" />
            </ui:DockPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
