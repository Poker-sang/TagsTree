<Page
    x:Class="TagsTree.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:TagsTree"
    Background="Transparent"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <labs:SettingsExpander Description="应用的主题色" Header="主题">
                <labs:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE771;" />
                </labs:SettingsExpander.HeaderIcon>
                <labs:SettingsExpander.Items>
                    <labs:SettingsCard HorizontalContentAlignment="Left" ContentAlignment="Vertical">
                        <RadioButtons SelectedIndex="{x:Bind root:App.AppConfig.Theme}">
                            <RadioButton Checked="OnThemeRadioButtonChecked" Content="跟随系统">
                                <RadioButton.Tag>
                                    <x:Int32>0</x:Int32>
                                </RadioButton.Tag>
                            </RadioButton>
                            <RadioButton Checked="OnThemeRadioButtonChecked" Content="浅色">
                                <RadioButton.Tag>
                                    <x:Int32>1</x:Int32>
                                </RadioButton.Tag>
                            </RadioButton>
                            <RadioButton Checked="OnThemeRadioButtonChecked" Content="深色">
                                <RadioButton.Tag>
                                    <x:Int32>2</x:Int32>
                                </RadioButton.Tag>
                            </RadioButton>
                        </RadioButtons>
                    </labs:SettingsCard>
                </labs:SettingsExpander.Items>
            </labs:SettingsExpander>
            <labs:SettingsExpander Description="被归类文件的根目录文件夹" Header="文件路径">
                <labs:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xE8B7;" />
                </labs:SettingsExpander.HeaderIcon>
                <labs:SettingsExpander.Items>
                    <labs:SettingsCard
                        ActionIcon="More"
                        IsClickEnabled="True"
                        Tapped="BLibraryPath_Click">
                        <labs:SettingsCard.Description>
                            <TextBox x:Name="TbLibraryPath" KeyUp="TbLibraryPath_OnCharacterReceived" />
                        </labs:SettingsCard.Description>
                    </labs:SettingsCard>
                </labs:SettingsExpander.Items>
            </labs:SettingsExpander>
            <labs:SettingsCard
                Description="将所在路径文件夹名作为标签使用"
                Header="文件夹标签"
                HeaderIcon="Tag">
                <ToggleSwitch IsOn="{x:Bind root:App.AppConfig.PathTagsEnabled}" Toggled="PathTagsEnabled_OnToggled" />
            </labs:SettingsCard>
            <labs:SettingsCard
                Description="监控文件路径文件下文件（夹）的变化"
                Header="监控文件"
                HeaderIcon="View">
                <ToggleSwitch IsOn="{x:Bind root:App.AppConfig.FilesObserverEnabled}" Toggled="FilesObserver_OnToggled" />
            </labs:SettingsCard>
            <labs:SettingsExpander
                Description="指定文件和标签记录所在的文件夹并进行导入导出的操作"
                Header="导入导出记录"
                HeaderIcon="Switch">
                <labs:SettingsExpander.Items>
                    <labs:SettingsCard
                        Header="导入"
                        HeaderIcon="Import"
                        IsClickEnabled="True"
                        Tapped="BImport_Click">
                        <labs:SettingsCard.ActionIcon>
                            <FontIcon Glyph="&#xE8A7;" />
                        </labs:SettingsCard.ActionIcon>
                    </labs:SettingsCard>
                    <labs:SettingsCard
                        Header="导出"
                        IsClickEnabled="True"
                        Tapped="BExport_Click">
                        <labs:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xEA52;" />
                        </labs:SettingsCard.HeaderIcon>
                        <labs:SettingsCard.ActionIcon>
                            <FontIcon Glyph="&#xE8A7;" />
                        </labs:SettingsCard.ActionIcon>
                    </labs:SettingsCard>
                    <labs:SettingsCard
                        Description="{x:Bind root:AppContext.AppLocalFolder}"
                        Header="打开"
                        HeaderIcon="OpenLocal"
                        IsClickEnabled="True"
                        Tapped="BOpenDirectory_Click">
                        <labs:SettingsCard.ActionIcon>
                            <FontIcon Glyph="&#xE8A7;" />
                        </labs:SettingsCard.ActionIcon>
                    </labs:SettingsCard>
                </labs:SettingsExpander.Items>
            </labs:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</Page>
