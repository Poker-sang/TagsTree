<Page
    x:Class="TagsTree.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TagsTree.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI.Controls"
    Background="Transparent"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="40,30" Spacing="50">
            <RadioButtons x:Name="RbTheme" Header="主题色">
                <RadioButton Checked="OnThemeRadioButtonChecked" Content="跟随系统">
                    <RadioButton.Tag>
                        <x:Int32>0</x:Int32>
                    </RadioButton.Tag>
                </RadioButton>
                <RadioButton Checked="OnThemeRadioButtonChecked" Content="浅色">
                    <RadioButton.Tag>
                        <x:Int32>1</x:Int32>
                    </RadioButton.Tag>
                </RadioButton>
                <RadioButton Checked="OnThemeRadioButtonChecked" Content="深色">
                    <RadioButton.Tag>
                        <x:Int32>2</x:Int32>
                    </RadioButton.Tag>
                </RadioButton>
            </RadioButtons>
            <AutoSuggestBox
                x:Name="TbLibraryPath"
                VerticalAlignment="Center"
                Header="文件路径"
                PlaceholderText="被归类文件的根目录文件夹"
                QueryIcon="More"
                QuerySubmitted="BLibraryPath_Click" />
            <ToggleSwitch
                x:Name="CbRootFoldersExist"
                VerticalAlignment="Center"
                Header="将所在路径文件夹名作为标签使用" />
            <ToggleSwitch x:Name="TsFilesObserver" Header="监控文件" />
            <DropDownButton Content="文件和标签记录">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="BottomEdgeAlignedRight">
                        <MenuFlyoutItem Tapped="BImport_Click" Text="导入" />
                        <MenuFlyoutItem Tapped="BExport_Click" Text="导出" />
                        <MenuFlyoutItem Tapped="BOpenDirectory_Click" Text="打开目录" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <ui:DockPanel>
                <Button
                    ui:DockPanel.Dock="Left"
                    Content="保存"
                    Tapped="BSave_Click" />
                <InfoBar x:Name="InfoBar" />
            </ui:DockPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
