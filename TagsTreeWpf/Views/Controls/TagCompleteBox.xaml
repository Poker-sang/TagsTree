<UserControl
    x:Class="TagsTreeWpf.Views.Controls.TagCompleteBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TagsTreeWpf.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:TagsTreeWpf.Models"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    mc:Ignorable="d">
    <ui:AutoSuggestBox
        VerticalAlignment="Center"
        DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:TagCompleteBox, AncestorLevel=1}}"
        DockPanel.Dock="Top"
        LostFocus="PathComplement"
        PlaceholderText="标签路径（不包含/:*?&quot;&lt;&gt;|,和空白字符且不为空）"
        SuggestionChosen="SuggestionChosen"
        Text="{Binding Path, Mode=TwoWay}"
        TextChanged="PathChanged"
        UpdateTextOnSelect="False">
        <ui:AutoSuggestBox.ItemTemplate>
            <DataTemplate>
                <TextBlock d:DataContext="{d:DesignInstance models:TagModel}" Text="{Binding FullName, Mode=OneTime}" />
            </DataTemplate>
        </ui:AutoSuggestBox.ItemTemplate>
    </ui:AutoSuggestBox>
</UserControl>
